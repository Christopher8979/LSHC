<div class="container scorecard">
  <div class="card-panel">
    <div class="row">

      {{!--Score--}}
      <div class="col s5 score-side">
        <div class="trophy-image"></div>
        <div class="player-name">
          Name
          <div class="name">{{player.Name}}</div>
        </div>
        <div class="score-field">
          Score
          <div class="score">{{lastAttempts.Final_Score__c}}</div>
        </div>
        <div class="top-score">Current Top Scorer <span class="yellow-text accent-4">{{topScorrer.name}} </span> with score of <span class="yellow-text accent-4">{{topScorrer.score}} </span></div>
      </div>

      {{!--Stats--}}
      <div class="col s7 stats-side no-padding">
        <h5 class="label">Statistics</h5>
        <table class="striped">
          <tr>
            <td>Service Line</td>
            <td class="value">{{player.Service_Line__c}}</td>
          </tr>
          <tr>
            <td>Total attempted</td>
            <td class="value">{{lastAttempts.Total_Questions_Attempted__c}}</td>
          </tr>
          <tr>
            <td>Total correct</td>
            <td class="value">{{lastAttempts.Correct_Answers__c}}</td>
          </tr>
          <tr>
            <td>Total tokens caught +ve</td>
            <td class="value">{{lastAttempts.Positive_Tokens_Caught__c}}</td>
          </tr>
          <tr>
            <td>Total tokens caught - ve</td>
            <td class="value">{{lastAttempts.Negative_Tokens_Caught__c}}</td>
          </tr>
          <tr>
            <td>Total points</td>
            <td class="value">{{lastAttempts.Token_Points__c}}</td>
          </tr>
          <tr>
            <td>Total time take</td>
            <td class="value">{{lastAttempts.Time_Taken__c}} sec</td>
          </tr>
        </table>

        {{!--Action buttons--}}
        <div class="action-buttons">
          <a href="/rules/{{lastAttempts.Player__c}}" class="btn waves-effect waves-light yellow darken-2">Retry</a>
          <a href="/" class="btn waves-effect waves-light red">Quit</a>
        </div>
      </div>

    </div>
  </div>
</div>


