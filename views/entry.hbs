<div class="container">
  <h1 class="center title light-green darken-1">{{title}}</h1>
  <div class="row valign-wrapper">
    <div class="col s6">
      <p class="extra-text center white-text">{{description}}</p>
    </div>
    <div class="col s6">
      <div class="card">
        <div class="card-content">
          <form class="col s12" id="credForm">
            <div class="input-field col s12">
              <input autocomplete="off" id="name" type="text" class="validate" required>
              <label for="name" data-error="Name should contain only alphabets">Name</label>
            </div>
            <div class="input-field col s12">
              <input autocomplete="off" id="email" type="email" class="validate" required>
              <label for="email" data-error="Email has to be of the format xxx@xxx.xxx">Email</label>
            </div>
            <div class="input-field col s12">
              <input autocomplete="off" id="serviceLine" type="text" class="validate" required>
              <label for="serviceLine" data-error="Service Line should contain only alphabets">Service Line</label>
            </div>
            <button type="button" id="enterGame" class="btn waves-effect waves-light right col s6 light-green darken-1">Start Game</button>
            <p class="red-text lighten-2 err-msg left col s6">Please fill all the fields to continue</p>
          </form>
          <br>
          <h6>* All fields are mandatory</h6>
        </div>
      </div>

    </div>
  </div>
</div>
