<main class="preloader loading">
  <div id="start-btn" style="display: none"></div>
  <canvas class="z-depth-4" id="game-holder" width="900" height="450"></canvas>
</main>

<div id="mute-btn">Mute</div>

<div id="questions-modal" class="modal">
  <div class="modal-content">
    {{#each questions}}
      <div class="question" id= {{this.id}}>
        <h5>{{this.title}}</h5>

        <div class="options">
          {{#each this.options}}
            <p>
              <input name="{{../id}}" type="radio" value="{{this.value}}" id="{{../id}}-{{@index}}" />
              <label for="{{../id}}-{{@index}}">{{this.label}}</label>
            </p>
          {{/each}}
        </div>
        <span class="hint hide">{{this.hint}}</span>
      </div>
    {{/each}}
  </div>
  <div class="modal-footer">
    <div class="center">
      <button type="button" id="questionClose" name="button" class="btn waves-effect waves-light red" disabled>Close</button>
      <button type="button" id="questionSubmit" name="button" class="btn waves-effect waves-light green" disabled>Submit</button>
    </div>
  </div>
</div>

<footer class="page-footer green darken-3">
  <div class="footer-copyright grey darken-4">
    <div class="container">
    <p class="center">Use <i class="material-icons amber-text">arrow_back</i> and <i class="material-icons amber-text">arrow_forward</i> arrows to move ambulance<br>
    Catch the good tokens falling from the sky to get points and reveal possible hints to the next question<br> 
    Answer <b class="green-text">10</b> questions to end the game</p>
    </div>
  </div>
</footer>
